<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ title or site.siteName }}</title>

  <!-- Fonts per spec -->
  <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200;300;400;500;600;700&family=Source+Sans+Pro:wght@400;600&display=swap" rel="stylesheet">

  <!-- Main stylesheet (asset-safe path) -->
  <link rel="stylesheet" href="{{ '/assets/styles.css' | url }}" />
</head>
<body>

  <!-- Header -->
  <header class="site-header">
    <div class="container">
      <a class="site-title" href="{{ '/' | url }}">{{ site.siteName }}</a>
      {% if site.nav %}
      <nav class="site-nav" aria-label="Main">
        <ul>
          {% for item in site.nav %}
            {# Expecting items like { "title": "About", "url": "/about/" } #}
            <li><a href="{{ item.url | url }}">{{ item.title }}</a></li>
          {% endfor %}
        </ul>
      </nav>
      {% endif %}
    </div>
  </header>

  <!-- Hero (optional, controlled by page front matter) -->
  {% include "partials/hero.njk" %}

  <!-- Main content -->
  <main id="main-content" class="site-main">
    <div class="container">
      <article class="content">
        {{ content | safe }}
      </article>
    </div>
  </main>

  <!-- Footer -->
  <footer class="site-footer">
    <div class="container">
      <p>© Flush · <a href="mailto:contact@flush.rocks">contact@flush.rocks</a></p>
      <nav class="site-footer-nav" aria-label="Footer">
        <ul>
          {# Add footer links here as needed, using asset-safe URLs #}
          {# Example:
          <li><a href="{{ '/about/' | url }}">About</a></li>
          <li><a href="{{ '/gigs/' | url }}">Gigs</a></li>
          <li><a href="{{ '/tags/' | url }}">Tags</a></li>
          #}
        </ul>
      </nav>
    </div>
  </footer>

</body>
</html>
