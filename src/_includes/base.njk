<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ title or site.siteName or "Flush" }}</title>

  <!-- Google Fonts (Oswald + Source Sans Pro) -->
<link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;700&family=Source+Sans+Pro:wght@400;600&display=swap" rel="stylesheet">

  <!-- Main stylesheet -->
  <link rel="stylesheet" href="{{ '/assets/styles.css' | url }}" />
</head>
<body>

  <!-- Header -->
  <header class="site-header">
    <div class="container header-row">
      <a href="{{ '/' | url }}" class="brand logo logo--bg logo--white" aria-label="Flush"></a>
      <nav class="nav">
        <a href="{{ '/about/' | url }}">About</a>
        <a href="{{ '/music/' | url }}">Music</a>
        <a href="{{ '/gigs/' | url }}">Gigs</a>
        <a href="{{ '/blog/' | url }}">Blog</a>
      </nav>
    </div>
  </header>

  <!-- Hero partial (valid) -->
  {% include "partials/hero.njk" %}

<main class="main">
  {# HERO ON TOP #}
  {% include "partials/hero.njk" %}

  {# TWO-COLUMN LAYOUT: SIDEBAR (LEFT) + CONTENT (RIGHT) #}
  <div class="container layout">
    <aside class="sidebar">
      {% include "partials/tags.njk" ignore missing %}
      {% include "partials/social.njk" ignore missing %}
    </aside>

    <section class="content">
      {{ content | safe }}
    </section>
  </div>
</main>


  <!-- Footer -->
  <footer class="site-footer">
    <div class="container">
      <p>© Flush · <a href="mailto:flushrock@gmail.com">flushrock@gmail.com</a></p>
    </div>
  </footer>

</body>
</html>
