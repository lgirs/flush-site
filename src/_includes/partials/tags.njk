{# src/_includes/partials/tags.njk #}
{# Render all collection names as tag chips, excluding Eleventy internals #}

{% set exclude = ['all', 'posts', 'tagList'] %}

<div class="tags-block" aria-label="Tags">
  {# Nunjucks can iterate over object keys with `for key, value in obj` #}
  {% for tag, items in collections %}
    {% if tag not in exclude %}
      <a class="tag-chip" href="/tags/{{ tag | slug }}/" title="See {{ tag }} content">
        {{ tag }}
      </a>
    {% endif %}
  {% endfor %}
</div>
