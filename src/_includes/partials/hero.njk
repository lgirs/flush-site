<section class="hero" role="region" aria-label="Page hero">
  <div class="container">
    {% if hero_title %}
      <h1>{{ hero_title }}</h1>
    {% endif %}

    {% if hero_lede %}
      <p class="lede">{{ hero_lede }}</p>
    {% endif %}

    {% if hero_image %}
      <img src="{{ hero_image | url }}" alt="{{ hero_image_alt or 'Hero image' }}">
    {% endif %}
  </div>
</section>
