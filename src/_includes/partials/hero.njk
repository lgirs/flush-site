{% raw %}{# Renders a centered hero with image or logo. Controlled via page front matter. #}
<section class="hero {% if hero_image %}hero--image{% endif %}" {% if hero_image %}style="background-image:url('{{ hero_image }}')" {% endif %}>
  <div class="container center">
    {% if hero_image %}
      {# Background image is applied via the inline style above #}
    {% else %}
      {# Fallback to big logo when no hero image is set #}
      <span class="logo logo--bg logo--white hero-logo" aria-label="Flush"></span>
    {% endif %}

    {% if hero_title %}
      <h1 class="mt-8">{{ hero_title }}</h1>
    {% endif %}

    {% if hero_lede %}
      <p class="lede">{{ hero_lede }}</p>
    {% endif %}
  </div>
</section>{% endraw %}
