<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{{ title or site.title }}</title>

    {# Fonts: Oswald + Source Sans Pro #}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;500;600;700&family=Source+Sans+Pro:wght@400;600&display=swap" rel="stylesheet">

    {# Styles (cache-bust) #}
<link href="{{ '/assets/styles.css?v=clean4' | url }}" rel="stylesheet">
  </head>

  <body>
    <header class="site-header">
      <div class="container header-row">
        <a class="logo" href="/">
          <img class="logo-img" src="{{ '/assets/images/brand/logo-flush-white.png' | url }}" alt="Flush">
        </a>
        <nav class="nav" aria-label="Primary">
          <a href="/gigs/"   {% if page.url and page.url.startsWith('/gigs/') %}aria-current="page"{% endif %}>Gigs</a>
          <a href="/music/"  {% if page.url and page.url.startsWith('/music/') %}aria-current="page"{% endif %}>Music</a>
          <a href="/videos/" {% if page.url and page.url.startsWith('/videos/') %}aria-current="page"{% endif %}>Videos</a>
          <a href="/about/"  {% if page.url and page.url.startsWith('/about/') %}aria-current="page"{% endif %}>About</a>
        </nav>
      </div>
    </header>

    <main>
      <div class="container">
        <section class="content">
          {{ content | safe }}
        </section>

        <section class="tags-block" aria-label="Explore by tags">
          {% include "partials/tags.njk" %}
        </section>
      </div>
    </main>

    <footer class="site-footer">
      <div class="container">
        <p>Â© Flush {{ site.year }}</p>
      </div>
    </footer>
  </body>
</html>
