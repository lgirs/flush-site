{# src/_includes/home.njk #}
{% extends "page.njk" %}

{% block main %}
  {# Hero #}
  {% if hero_title or hero_lede %}
  <section class="hero">
    <div class="container center">
      {% if hero_title %}<h1>{{ hero_title }}</h1>{% endif %}
      {% if hero_lede %}<p class="lede">{{ hero_lede }}</p>{% endif %}
    </div>
  </section>
  {% endif %}

  {# Body content from index.md #}
  <div class="content">
    {{ content | safe }}
  </div>

  {# Social placeholder #}
  <section class="social mt-8">
    <div class="card pad-8">Social feed placeholder (Facebook / Instagram)</div>
  </section>

  {# Tags wordâ€‘cloud placeholder #}
  <section class="tags-block mt-8">
    {# example hard-coded tags; real tags can come later #}
    <a class="tag-chip" href="{{ '/tags/rock/' | url }}">rock</a>
    <a class="tag-chip" href="{{ '/tags/live/' | url }}">live</a>
    <a class="tag-chip" href="{{ '/tags/video/' | url }}">video</a>
  </section>
{% endblock %}
